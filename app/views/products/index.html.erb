<section class="products-index">

  <% if active_sale? %>
  
  <p class="alert alert-info">
    There's an active <%= @active_sale.name %> going on!
    <strong>Everything is <%= @active_sale.percent_off %>% off!</strong>
  </p>
  <% end %>

  <header class="page-header">
    <h1>Products</h1>
  </header>

  <div class="products">
    <%= render @products %>
  </div>

</section>
